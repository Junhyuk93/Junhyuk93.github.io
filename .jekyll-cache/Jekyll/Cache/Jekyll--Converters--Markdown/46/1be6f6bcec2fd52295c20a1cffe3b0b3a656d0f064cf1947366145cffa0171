</pre></td><td class="code"><pre><span class="kt">void</span> <span class="nf">print_hi</span><span class="p">(</span><span class="n">string</span> <span class="n">name</span><span class="p">)</span> <span class="p">{</span>
  <span class="n">printf</span><span class="p">(</span><span class="s">"Hi, %s"</span><span class="p">,</span> <span class="n">name</span><span class="p">);</span>
